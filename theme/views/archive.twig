{# Archive template - extends index with archive-specific header #}

{% extends "index.twig" %}

{% block content %}
    <header class="mb-12">
        {% if title %}
            <h1 class="text-4xl font-bold text-gray-900 mb-4">{{ title }}</h1>
        {% endif %}
        
        {% if description %}
            <div class="text-lg text-gray-700 prose max-w-none">
                {{ description }}
            </div>
        {% endif %}
    </header>
    
    {{ parent() }}
{% endblock %}
