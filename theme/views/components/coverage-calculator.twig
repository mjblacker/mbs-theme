{#
    Coverage Calculator Component
    
    A simple calculator component for estimating product coverage requirements
#}

<div class="coverage-calculator bg-gray-50 border rounded-lg p-4" x-data="coverageCalculator()">
    <h3 class="text-lg font-semibold mb-3 flex items-center">
        <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
        </svg>
        Coverage Calculator
    </h3>
    
    <div class="space-y-4">
        <!-- Area Input -->
        <div class="grid grid-cols-2 gap-4">
            <div>
                <label for="calc-length" class="block text-sm font-medium text-gray-700 mb-1">
                    Length (m)
                </label>
                <input 
                    type="number" 
                    id="calc-length"
                    x-model="length"
                    @input="calculateCoverage"
                    min="0"
                    step="0.1"
                    class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    placeholder="0.0">
            </div>
            
            <div>
                <label for="calc-width" class="block text-sm font-medium text-gray-700 mb-1">
                    Width (m)
                </label>
                <input 
                    type="number" 
                    id="calc-width"
                    x-model="width"
                    @input="calculateCoverage"
                    min="0"
                    step="0.1"
                    class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    placeholder="0.0">
            </div>
        </div>
        
        <!-- Results -->
        <div class="bg-white rounded border p-3" x-show="totalArea > 0">
            <div class="flex justify-between items-center mb-2">
                <span class="text-sm font-medium text-gray-700">Total Area:</span>
                <span class="text-lg font-semibold text-gray-900" x-text="totalArea + ' mÂ²'"></span>
            </div>
            
            <div class="flex justify-between items-center" x-show="requiredQuantity > 0">
                <span class="text-sm font-medium text-gray-700">Estimated Quantity:</span>
                <span class="text-lg font-semibold text-blue-600" x-text="requiredQuantity + ' units'"></span>
            </div>
            
            <p class="text-xs text-gray-500 mt-2">
                * This is an estimate. Please consult with our team for precise requirements.
            </p>
        </div>
        
        <!-- Action Button -->
        <button 
            type="button"
            @click="addCalculatedQuantity"
            x-show="requiredQuantity > 0"
            class="w-full bg-[#FFF200] text-black font-semibold py-2 px-4 text-sm uppercase hover:bg-yellow-300 transition-colors">
            Add Calculated Quantity to Cart
        </button>
    </div>
</div>