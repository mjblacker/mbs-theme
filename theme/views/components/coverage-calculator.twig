{#
    Coverage Calculator Component
    
    A simple calculator component for estimating product coverage requirements
#}

{% set coverage = function('get_field', 'coverage_m2', post.ID) %}
<div class="coverage-calculator" x-data="coverageCalculator()" data-product-coverage="{{ coverage|default(1) }}">
    <h3 class="text-lg font-semibold mb-4">Coverage Calculator</h3>
    
    <div class="flex items-center gap-4">
        <!-- Total Area Input -->
        <div class="flex-1">
            <input 
                type="number" 
                id="calc-area"
                x-model="totalArea"
                @input="calculateCoverage"
                min="0"
                step="0.1"
                class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Enter your total area in mÂ²">
        </div>
        
        <!-- Result -->
        <div class="flex-1 text-right" x-show="requiredQuantity > 0">
            <span class="text-gray-700">You need: </span>
            <span class="text-2xl font-bold text-green-600" x-text="requiredQuantity"></span>
            <span class="text-green-600 font-medium"> units</span>
        </div>
    </div>
</div>