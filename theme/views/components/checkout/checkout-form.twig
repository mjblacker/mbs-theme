{# Checkout Form Component
   Props: wc_checkout, wc_cart
#}

{{ function('do_action', 'woocommerce_before_checkout_form')|raw }}

<form name="checkout" method="post" class="checkout woocommerce-checkout" action="{{ function('wc_get_checkout_url') }}" enctype="multipart/form-data">
    
    <!-- Billing Details Section -->
    <div class="billing-section mb-8">
        {% include 'components/checkout/billing-details.twig' with { wc_checkout: wc_checkout } %}
    </div>

    <!-- Shipping Address Section -->
    {% if wc_cart.needs_shipping() %}
        <div class="shipping-section mb-8">
            {% include 'components/checkout/shipping-details.twig' with { wc_checkout: wc_checkout } %}
        </div>
    {% endif %}

    <!-- Additional Information Section -->
    <div class="additional-info-section mb-8">
        {% include 'components/checkout/additional-info.twig' with { wc_checkout: wc_checkout } %}
    </div>

    {{ function('do_action', 'woocommerce_checkout_before_order_review')|raw }}
    {{ function('do_action', 'woocommerce_checkout_after_order_review')|raw }}
    
</form>

{{ function('do_action', 'woocommerce_after_checkout_form')|raw }}