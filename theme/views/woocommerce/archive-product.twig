{% extends "base.twig" %}

{% block content %}
    <div class="woocommerce-shop prose max-w-none">
        <!-- Banner Header with Background Image -->
        <header class="relative bg-cover bg-center bg-no-repeat flex items-center" style="background-image: url('{{ function('get_template_directory_uri') }}/assets/images/shop-banner.png'); height: 171px;">
     
            <!-- Banner Content -->
            <div class="relative z-10 text-left container mx-auto px-4 sm:px-6 lg:px-8">
                {% if term %}
                    <h1 class="text-4xl text-white font-medium mb-4">{{ title }}</h1>
                    {% if term.description %}
                        <div class="text-4xl md:text-4xl text-white max-w-2xl">
                            All Products
                        </div>
                    {% endif %}
                {% else %}
                    <h1 class="text-4xl text-white font-medium">All Products</h1>
                {% endif %}
            </div>
        </header>

        {% include 'woocommerce/breadcrumbs.twig' %}

        <div class="container mx-auto mt-0 mb-10 px-4 sm:px-6 lg:px-8">
            <div x-data="shopFilters" {% if term %}x-init="initializeCategoryPage({{ term.term_id }})"{% endif %} @filter-changed="applyFilters()">

                <div class="flex items-center justify-between gap-4 mb-4">
                    <!-- Mobile Filter Toggle Button - Shows on left on mobile -->
                    <button @click="mobileFiltersOpen = !mobileFiltersOpen"
                            class="lg:hidden flex items-center gap-2 px-4 py-1 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors whitespace-nowrap">
                        <img src="{{ site.theme.uri }}/assets/images/filter-icon.png" alt="Filter" class="!m-0">
                        All Filters
                    </button>

                    <!-- Sort Dropdown - Right side on both mobile and desktop -->
                    <div class="ml-auto">
                        {% include 'components/archive-product/sort-dropdown.twig' %}
                    </div>
                </div>

                <div class="flex flex-col lg:flex-row gap-8">
                    <!-- Left Sidebar (1/4 width) - Hidden on mobile by default, always visible on desktop -->
                <aside class="w-full lg:w-1/4 lg:block"
                       :class="{'hidden': !mobileFiltersOpen}"
                       x-transition:enter="transition ease-out duration-200"
                       x-transition:enter-start="opacity-0 -translate-y-4"
                       x-transition:enter-end="opacity-100 translate-y-0"
                       x-transition:leave="transition ease-in duration-150"
                       x-transition:leave-start="opacity-100 translate-y-0"
                       x-transition:leave-end="opacity-0 -translate-y-4">
                    <div class="pr-6 pl-0 lg:pr-6 pb-4 lg:pb-0">
                        
                        <!-- Categories Filter (show on shop and category pages) -->
                        {% if shop_filters.categories %}
                            {% include 'components/archive-product/category-dropdown-filter.twig' with {
                                'title': 'Categories',
                                'items': shop_filters.categories,
                                'is_link_category': true,
                                'all_expanded_default': true
                            } %}
                        {% endif %}

                        <!-- Brands Filter -->
                        {% if shop_filters.brands %}
                            {% include 'components/archive-product/brand-filter-component.twig' with {
                                'title': 'Brands',
                                'items': shop_filters.brands,
                                'filter_type': 'brand',
                                'show_collapse': false
                            } %}
                        {% endif %}

                        <!-- Price Range Filter -->
                        {% include 'components/archive-product/price-range-filter.twig' %}

                        {% include 'components/archive-product/apply-filters-button.twig' %}

                    </div>
                </aside>

                <!-- Main Content (3/4 width) -->
                <main class="w-full lg:w-3/4">
                    {% include 'components/archive-product/loading-indicator.twig' %}

                   

                    <!-- Product Results -->
                    <div id="product-results" x-show="!loading"></div>
                </main>
                </div>
            </div>
        </div>
    </div>

    <!-- CTA Block -->
    {% include "components/single-product/product-cta.twig" %}

{% endblock %}