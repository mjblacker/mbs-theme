{#
  Contact Button Component
  - Yellow contact us button
  - Supports desktop and mobile contexts
  
  Parameters:
  - context: 'desktop' or 'mobile' for different styling
  - mobile_menu: set to true for mobile menu context (adds click handler)
#}

{% set context = context is defined ? context : 'desktop' %}
{% set mobile_menu = mobile_menu is defined ? mobile_menu : false %}
{% set company_phone = function('function_exists', 'get_field') ? (function('get_field', 'phone', 'options') ?: (theme_options.company_info.phone ?? '1300 xxx xxx')) : (theme_options.company_info.phone ?? '1300 xxx xxx') %}

{% if context == 'desktop' %}
    {# Desktop Contact Button #}
    <a href="/contact"
       class="bg-[#FFF200] hover:bg-yellow-300 text-black font-medium px-6 py-2 rounded-md transition-colors duration-200">
        Contact Us
    </a>
{% elseif mobile_menu %}
    {# Mobile Menu Contact Button #}
    <a href="/contact"
       class="block w-full bg-[#FFF200] hover:bg-yellow-300 text-black font-medium px-4 py-3 rounded-md transition-colors duration-200 text-center"
       @click="mobileMenuOpen = false">
        Contact Us
    </a>
{% else %}
    {# Mobile Header Contact Button #}
    <a href="tel:{{ company_phone|replace({' ': '', '(': '', ')': ''}) }}"
       class="bg-[#FFF200] hover:bg-yellow-300 text-black font-medium px-3 py-1.5 rounded text-sm whitespace-nowrap transition-colors duration-200">
        Call Us
    </a>
{% endif %}